{% schema %}
{
  "name": "Image + Text Section",
  "tag": "custom-section",
  "class": "custom-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "default": ""
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Handcrafted and Responsibly Sourced"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph Text",
      "default": "On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment, so blinded by desire, that they cannot foresee the pain and trouble that are bound to ensue."
    }
  ],
  "blocks": [
    {
      "name": "Button Block",
      "type": "button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "#"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "settings": {
        "heading": "Handcrafted and Responsibly Sourced",
        "paragraph": "On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment, so blinded by desire, that they cannot foresee the pain and trouble that are bound to ensue.",
        "image": ""
      },
      "blocks": [
        {
          "type": "button",
          "settings": {
            "button_text": "Learn more",
            "button_link": "#"
          }
        }
      ]
    }
  ]
}
{% endschema %}
